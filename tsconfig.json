{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./modules/*"]
    },
    "esModuleInterop": true,
    "checkJs": true,
    "types": []
  },
  "exclude": [
    "supabase",
    "node_modules",
    "./shared/**",
    "babel.config.js",
    "metro.config.js",
    "docs",
    "cli",
    "android",
    "ios",
    "lint-staged.config.js"
  ]
}
